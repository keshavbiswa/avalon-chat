<div class="row">
  <div class="col-md-9">
    <ul class="list-group" id="conversations-list">
      <% @conversations.each do |conversation| %>
        <%= render 'conversations/conversation', conversation: conversation, user: current_user %>
      <% end %>
    </ul>
  </div>

  <div class="col-md-3">
    <div class="card">
      <div class="card-header">
        <h4>Users</h4>
      </div>
      <ul class="list-group list-group-flush">
        <% @users.each do |user| %>
          <li class="list-group-item">
            <%= link_to "#{user.name}".titleize, conversations_path(user_id: user), remote: true, method: :post, class: 'nav-link' %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>