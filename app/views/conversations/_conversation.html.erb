<li class="list-group-item">
  <div class="card card-default" data-conversation-id="<%= conversation.id %>">
    <div class="card-header">
      <%= link_to "#{conversation.opposed_user(user).first_name}".titleize, '', class: 'toggle-window' %>
      <span class="pull-right">
        <%= link_to "Close", close_conversation_path(conversation), class: "btn btn-secondary", remote: true, method: :post %>
      </span>
    </div>

    <div class="card-body" style="display: none;">
      <div class="messages-list">
        <ul class="list-group">
          <%= render 'conversations/conversation_content', messages: conversation.messages, user: user %>
        </ul>
      </div>
      <form class="new_message">
        <div class="row">
          <input name="conversation_id" type="hidden" value="<%= conversation.id %>">
          <input name="user_id" type="hidden" value="<%= user.id %>">
          <div class="col-md-9">
            <textarea type="text" name="body" class="form-control"></textarea>
          </div>
          <div class="col-md-3">
            <input type="submit" class="btn btn-block btn-success" value="Send">
          </div>
        </div>
      </form>
    </div>
  </div>
</li>